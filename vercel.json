{
  "version": 2,
  "routes": [{ "src": "/[^.]+", "dest": "/", "status": 200 }],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-backend.vercel.app/api/$1"
    }
  ]
}
